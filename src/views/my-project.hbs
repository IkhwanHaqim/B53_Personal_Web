    <link rel="stylesheet" href="./assets/css/my-project.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <title>Document</title>
</head>
<body>

<!-- Navbar -->

<nav class="navbar">
    <ul class="navbar-ul">
       <div class="navbar-1">
                <li>
                    <img src="./assets/img/dumbways.png" class="navbar-logo">
                </li>
                <li>
                    <a href='/index' class="navbar-2 active">Home</a>
                </li>
                <li>
                  <a href='/my-project' class="navbar-2">My Project</a>
              </li>
              <li>
                <a href='/testimonial' class="navbar-2">My Testimonial</a>
            </li>
            </div>
        <div>
            <li>
                <a href='/contact' class="navbar-flex-btn">Contact Me</a>
            </li>
            <i class="fa-solid fa-bars fa-2x" id="humberger-btn" style="cursor: pointer;" onclick="openHumberger()"></i>
        </div>
    </ul>
    <div id="humberger-container" class="humberger-container hidden">
        <a class="humberger" href="index.html">Home</a>
        <a class="humberger" href="my-project.html">My Project</a>
        <a class="humberger humberger-active" href="testimonial.html">My Testimonial</a>
        <a class="humberger" href="contact-me.html">Contact Me</a>
    </div>
</nav> 

<!-- Content -->

<section class="container">
   <div class="kotak">
     <h1>ADD MY PROJECT</h1>
     <div class="form">
       <form action="/my-project" method="post">
          <div class="label-box">
             <label class="label-style" for="name">Name</label>
             <input class="input-style" id="name" name="name">
          </div>
          <div class="column">
             <div class="label-box">
                <label class="label-style1" for="Start Date">Start Date</label>
                <input type="date" class="input-style1" id="startDate" name="startdate">
             </div>
             <div class="label-box">
                <label class="label-style1" for="End Date">End Date</label>
                <input type="date" class="input-style1" id="endDate" name="enddate">
             </div>
          </div>
            <div class="text-box">
                <label class="label-style2" for="description">Description</label>
                <textarea type="text" class="input-area" id="content" name="description"></textarea>
            </div>
          <div class="Technologies-box">
             <h3 style="margin-top: 20px;">Technologies</h3>
             <div class="check-box">
                <div class="box1">
                   <input type="checkbox" id="nodejs" name="nodejs" value="nodejs"/> NodeJs
                <div class="box2">
                   <input type="checkbox" id="reactjs" name="reactjs" value="reactjs"/> ReactJs
                </div>
                </div>
                <div class="box3">
                   <input type="checkbox" id="angular" name="angular" value="angular"/> Angular
                <div class="box4">
                   <input type="checkbox" id="vuejs" name="vuejs" value="vuejs"/> VueJs 
                </div>
                </div>
             </div>
             <div class="upload">
                <label class="upload-img">Upload Image</label>
                <div class="input-project">
                    <label for="image">
                      <P>Choose File</P>
                      <img src="./assets/img/link2.png" alt="file" />
                    </label>
                    <input type="file" id="image" hidden/>
                </div>
             </div>
                <button type="submit" class="btn-submit">Submit</button>
          </div>
      </form>
    </div>
   </div>
</section>

 <!-- Section Blog -->
 
 <section id="contents" class="mainproject">
    <!--dynamic content would be here -->
    <div class="judul">
        <h1>MY PROJECT</h1>
    </div>
    <div id="contents-isi" class="card-container">
      {{#each data}}
      <div class="card">
        <img src="assets/img/tiger.jpg" class="card-image" alt=""/>
        <h2>
            <a href="/project-detail/{{@index}}" target="_blank">{{this.name}}</a>
        </h2>
        <div class="duration">
            <p>Duration: {{this.duration}} Day </p>
        </div>
            <p class="content">
             {{this.description}}
            </p>
        <div class="technologies">
         {{#each this.technologies}}
            <i class="{{this.icon}}"></i> {{this.name}}
         {{/each}}
        </div>
        <div class="btn-card">
            <button><a>Edit</a></button>
            <button><a href="/delete-project/{{@index}}">Delete</a></button>
        </div>
      </div> 
      {{/each}}
    </div>    
</section>
<script src="./assets/js/nav.js"></script>
</body>
</html>